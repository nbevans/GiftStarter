@{
    ViewBag.Title = "Wish list";
}
@model Giftstarter.Models.AddWishlistItem


<div class="row">
    <div class="col-md-12">
        <div class="btn btn-primary btn-lg">I wish for...</div>
        @using (Html.BeginForm("AddWishlistItem", "Home", FormMethod.Post, new { @class = "form-inline" }))
        {
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Pancake roller!" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Link, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.Link, new { @class = "form-control", placeholder = "http://" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Price, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.Price,new { @class = "form-control", placeholder = "£0.00" })
            </div>
        }
    </div>
</div>

<div class="row">
    <div class="col-xs-6 col-md-4">Wished for</div>
    <div class="col-xs-6 col-md-4">Link</div>
    <div class="col-xs-6 col-md-4">Price</div>
</div>

