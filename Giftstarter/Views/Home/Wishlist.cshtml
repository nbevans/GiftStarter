@{
    ViewBag.Title = "Wish list";
}
@using Giftstarter.Domain
@model Giftstarter.Models.AddWishlistItem


<div class="row">
    @using (Html.BeginForm("AddWishlistItem", "Home", FormMethod.Post, new { @class = "form-inline" }))
    {
        <div class="col-md-10">
            <div class="form-group">
                @Html.LabelFor(x => x.Name, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Link, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.Link, new { @class = "form-control", placeholder = "http://" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Price, new { @class = "sr-only" })
                @Html.TextBoxFor(x => x.Price, new { @class = "form-control", placeholder = "£0.00" })
            </div>
        </div>
        <div class="col-md-2 text-right">
            <input type="submit" class="btn btn-primary" value="I wish for this!" />
        </div>
    }
</div>

<hr />

<div class="row">
    <div class="col-xs-6 col-md-4"><strong>Wished for</strong></div>
    <div class="col-xs-6 col-md-4"><strong>Link</strong></div>
    <div class="col-xs-6 col-md-4"><strong>Price</strong></div>
</div>

@foreach (var item in State.Instance.Wishlists[new User("James")])
{
    <div class="row">
        <div class="col-xs-6 col-md-4">@item.Name</div>
        <div class="col-xs-6 col-md-4">@item.Link</div>
        <div class="col-xs-6 col-md-4">@item.Price.ToString("C")</div>
    </div>
}